@model IEnumerable<SHOP_DCAN.HoaDon>
@{
    ViewBag.Title = "LichSuDonHang";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}


<style>
    .container {
        max-width: 1200px;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
    }

        .table th, .table td {
            text-align: center;
            padding: 12px;
        }

        .table th {
            background-color: #f8f9fa;
            color: #495057;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.2rem;
    }

    .alert-info {
        margin-top: 20px;
        padding: 15px;
        background-color: #d9edf7;
        color: #31708f;
        border-radius: 4px;
        border: 1px solid #bce8f1;
    }
</style>

<div class="container mt-4">
    <h1 class="mb-4" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Lịch sử đơn hàng của bạn</h1>
    @if (Model.Any())
    {
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Ngày Đặt</th>
                <th>Tổng Tiền</th>
                <th>Tình Trạng</th>
                <th>Chi Tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
        <tr>
            <td>@order.MaHD</td>
            <td>@order.NgayDat</td>
            <td>@order.TongTien VND</td>
            <td>@order.TinhTrang</td>
            <td>
                <a href="@Url.Action("ChiTietDonHang", "Product", new { id = order.MaHD })" class="btn btn-info btn-sm">Xem Chi Tiết</a>
            </td>
        </tr>}
        </tbody>
    </table>
</div> }
            else
            {
<div class="alert alert-info" role="alert">
    Bạn chưa có đơn hàng nào.
</div>}
</div>

