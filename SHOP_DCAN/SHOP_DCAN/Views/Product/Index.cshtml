@model PagedList.PagedList<SHOP_DCAN.SanPham>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<main>

    <!-- breadcrumb-area-start -->
    <section class="breadcrumb-area" data-background="img/bg/page-title.png" style="background-image: url(&quot;img/bg/page-title.png&quot;);">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-text text-center">
                        <h1><font style="vertical-align: inherit;"><font style="vertical-align: inherit; font-family: 'Segoe UI'">Cửa hàng của chúng tôi</font></font></h1>
                        <ul class="breadcrumb-menu">
                            <li><a href="index.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">trang chủ</font></font></a></li>
                            <li><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">cửa hàng</font></font></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- shop-area start -->
    <section class="shop-area pt-100 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-8">
                    <div class="shop-banner mb-50">
                        <img src="~/assets/img/banner1.jpg" alt="">
                    </div>
                    <!-- tab filter -->
                    <div class="row mb-10">
                        <div class="col-xl-5 col-lg-6 col-md-6">
                            <div class="product-showing mb-40">
                                <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Hiển thị 1–22 trong số 32 kết quả</font></font></p>
                            </div>
                        </div>
                        <div class="col-xl-7 col-lg-6 col-md-6">
                            <div class="shop-tab f-right">
                                <ul class="nav text-center" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fas fa-list-ul"></i> </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><i class="fas fa-th-large"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="pro-filter mb-40 f-right">
                                <form action="#">
                                    <select name="pro-filter" id="pro-filter" onchange="location = this.value;">
                                      
                                        <option value="@Url.Action("SapXepTheoTen", "Product")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bán chạy nhất</font></font></option>
                                        <option value="4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Sản phẩm từ A đến Z</font></font></option>
                                    </select>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- tab content -->
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">

                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="product-wrapper mb-50">
                                            <div class="product-img mb-25">
                                                <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaSP })">
                                                    <img src="https://res.cloudinary.com/deuokbfws/image/upload/v1722077825/@item.HinhAnh" alt="">
                                                    @*<img class="secondary-img" src="#" alt="">*@
                                                </a>
                                                <div class="product-action text-center">
                                                    <a href="#" title="Giỏ hàng">
                                                        <i class="flaticon-shopping-cart"></i>
                                                    </a>
                                                    <a href="#" title="Xem lướt qua">
                                                        <i class="flaticon-eye"></i>
                                                    </a>
                                                    <a href="#" data-toggle="tooltip" data-placement="right" title="So sánh">
                                                        <i class="flaticon-compare"></i>
                                                    </a>
                                                </div>
                                                <div class="sale-tag">
                                                    <span class="new"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">mới</font></font></span>
                                                    <span class="sale"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">doanh thu</font></font></span>
                                                </div>
                                            </div>
                                            <div class="product-content">

                                                <h4>
                                                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaSP })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.TenSP</font></font></a>
                                                </h4>
                                                <div class="product-meta">
                                                    <div class="pro-price">
                                                        <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Common.FormatNumber(item.DonGia, 0) VND</font></font></span>
                                                        <span class="old-price"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">$230.00 USD</font></font></span>
                                                    </div>
                                                </div>
                                                <div class="product-wishlist">
                                                    <a href="#"><i class="far fa-heart" title="Danh sách mong muốn"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                      
                    </div>
                    <div class="basic-pagination basic-pagination-2 text-center mt-20">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, query = ViewBag.Query }))
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="sidebar-box">

                        <div class="shop-widget">
                            <h3 class="shop-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit; font-family: 'Segoe UI'">Tìm kiếm bởi</font></font></h3>
                            @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                            {

                                <input type="text" name="query" placeholder="Nhập từ khóa..." value="@ViewBag.Query" style="height:35px">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            }
                            </div>

                        @Html.Action("MenuThuongHieu", "Product")

                        


                        @Html.Action("MenuLoai", "Product")



                        <div class="shop-widget">
                            <div class="shop-sidebar-banner">
                                <a href="shop.html"><img src="~/assets/img/new_1.jpg" alt=""></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- shop-area end -->


</main>