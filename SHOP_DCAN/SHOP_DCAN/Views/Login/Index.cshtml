
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<main>

        <!-- breadcrumb-area-start -->
        <section class="breadcrumb-area" data-background="img/bg/page-title.png" style="background-image: url(&quot;img/bg/page-title.png&quot;);">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="breadcrumb-text text-center">
                            <h1><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng nhập</font></font></h1>
                            <ul class="breadcrumb-menu">
                                <li><a href="index.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">trang chủ</font></font></a></li>
                                <li><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng nhập</font></font></span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb-area-end -->

        <!-- login Area Strat-->
        <section class="login-area pt-100 pb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="basic-login">
                            <h3 class="text-center mb-60"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng nhập từ đây</font></font></h3>
                            <form action="#">
                                <label for="name"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa chỉ email </font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">**</font></font></span></label>
                                <input id="name" type="text" placeholder="Nhập tên người dùng hoặc địa chỉ Email...">
                                <label for="pass"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mật khẩu </font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">**</font></font></span></label>
                                <input id="pass" type="password" placeholder="Nhập mật khẩu...">
                                <div class="login-action mb-20 fix">
                                    <span class="log-rem f-left">
                                        <input id="remember" type="checkbox">
                                        <label for="remember"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Hãy nhớ tôi!</font></font></label>
                                    </span>
                                    <span class="forgot-login f-right">
                                        <a href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Quên mật khẩu?</font></font></a>
                                    </span>
                                </div>
                                <button class="btn theme-btn-2 w-100"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng nhập ngay bây giờ</font></font></button>
                                <div class="or-divide"><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">hoặc</font></font></span></div>
                                <a href="@Url.Action("Index","DangKy")" class="btn theme-btn w-100"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng ký ngay</font></font></a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- login Area End-->


        </main>

