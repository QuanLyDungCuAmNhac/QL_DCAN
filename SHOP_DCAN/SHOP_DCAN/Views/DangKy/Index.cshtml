
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<main>

    <!-- breadcrumb-area-start -->
    <section class="breadcrumb-area" data-background="img/bg/page-title.png" style="background-image: url(&quot;img/bg/page-title.png&quot;);">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-text text-center">
                        <h1><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng ký</font></font></h1>
                        <ul class="breadcrumb-menu">
                            <li><a href="index.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">trang chủ</font></font></a></li>
                            <li><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng ký</font></font></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- login Area Strat-->
    <section class="login-area pt-100 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="basic-login">
                        <h3 class="text-center mb-60"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng ký từ đây</font></font></h3>
                        <form action="#">
                            <label for="name"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên tài khoản </font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">**</font></font></span></label>
                            <input id="name" type="text" placeholder="Nhập tên người dùng hoặc địa chỉ Email...">
                            <label for="email-id"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa chỉ email </font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">**</font></font></span></label>
                            <input id="email-id" type="text" placeholder="Nhập tên người dùng hoặc địa chỉ Email...">
                            <label for="pass"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mật khẩu </font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">**</font></font></span></label>
                            <input id="pass" type="password" placeholder="Nhập mật khẩu...">
                            <div class="mt-10"></div>
                            <button class="btn theme-btn-2 w-100"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đăng ký ngay</font></font></button>
                            <div class="or-divide"><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">hoặc</font></font></span></div>
                            <a href="@Url.Action("Index","Login")" class="btn theme-btn w-100"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">đăng nhập ngay bây giờ</font></font></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login Area End-->


</main>