@model IEnumerable<SHOP_DCAN.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<main>
    <!-- slider-area start -->
    <section class="slider-area pos-relative">
        <div class="slider-active slick-initialized slick-slider">
            <button type="button" class="slick-prev slick-arrow" style="display: block;"> <i class="fas fa-arrow-left"></i> </button>
            <div class="slick-list draggable">
                <div class="main_slider">
                    <div class="container fill_height">
                        <div class="row align-items-center fill_height">
                            <div class="col">
                                <div class="main_slider_content">
                                    <img src="~/assets/img/img_backgroung.jpg" width="1100" />
                                    @*<h6>Spring / Summer Collection 2017</h6>
                                        <h1>Get up to 30% Off New Arrivals</h1>
                                        <div class="red_button shop_now_button"><a href="#">shop now</a></div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="slick-next slick-arrow" style="display: block;"> <i class="fas fa-arrow-right"></i></button>
        </div>
    </section>
    <!-- slider-area end -->
    <!-- banner area start -->
    <section class="banner-area pt-30 pl-15 pr-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="banner mb-30">
                        <a href="shop.html"><img src="~/assets/img/banner1.jpg" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="banner mb-30">
                        <a href="shop.html"><img src="~/assets/img/banner2.jpg" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="banner mb-30">
                        <a href="shop.html"><img src="~/assets/img/banner3.jpg" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- banner area end -->
    <!-- product-area start -->
    @Html.Action("ItemBasedRecommendations", "Product")
    <section class="product-area box-90 pt-70 pb-40">
        <div class="container-fluid">
            @if (Session["KH"] == null)
            {
                <h1 style="font-family:'Segoe UI'">GỢI Ý SẢN PHẨM</h1>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-3">
                            <div class="product-wrapper mb-50">
                                <div class="product-img mb-25">
                                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaSP })">
                                        <img src="https://res.cloudinary.com/deuokbfws/image/upload/v1722077825/@item.HinhAnh" alt="">
                                        @* <img class="secondary-img" src="img/product/pro16.jpg" alt=""> *@
                                    </a>
                                    <div class="product-action text-center">
                                        <a href="@Url.Action("Index","ShoppingCart")" data-id="@item.MaSP" class="btnAddToCart">
                                            <i class="flaticon-shopping-cart"></i>
                                        </a>
                                        <a href="#" title="Xem lướt qua">
                                            <i class="flaticon-eye"></i>
                                        </a>
                                        <a href="#" data-toggle="tooltip" data-placement="right" title="So sánh">
                                            <i class="flaticon-compare"></i>
                                        </a>
                                    </div>
                                    <div class="sale-tag">
                                        <span class="new"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">mới</font></font></span>
                                        <span class="sale"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">doanh thu</font></font></span>
                                    </div>
                                </div>
                                <div class="product-content">
                                    <h4>
                                        <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaSP })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.TenSP</font></font></a>
                                    </h4>
                                    <div class="product-meta">
                                        <div class="pro-price">
                                            <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Common.FormatNumber(@item.DonGia, 0) VND</font></font></span>
                                            <span class="old-price"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">$230.00 USD</font></font></span>
                                        </div>
                                    </div>
                                    <div class="product-wishlist">
                                        <a href="#"><i class="far fa-heart" title="Danh sách mong muốn"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>

    <!-- upcoming-product-area end -->
    <!-- latest-blog-area start -->
    <section class="latest-blog-area pt-95 pb-60 box-90">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="area-title text-center mb-50">
                        <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Nguồn cấp tin tức</font></font></h2>
                        <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Kiểm tra nó mỗi lần cập nhật</font></font></p>
